server {
        listen *:{{ NGINX_PORT }} ssl;
        listen [::]:{{ NGINX_PORT }} ssl;
	
	root /var/www/html;
        index index.php index.html index.htm;

        ssl_certificate {{ PROJECT_DIR }}/build/nginx/confs/server.crt;
        ssl_certificate_key {{ PROJECT_DIR }}/build/nginx/confs/server.key;
                
	location ~ \.php$ {
        	fastcgi_pass {{ WORDPRESS_IPV4 }}:{{ WORDPRESS_PORT }};
        	include fastcgi_params;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        	fastcgi_param PATH_INFO $fastcgi_path_info;
	}

        location ~ /\.ht {
               deny all;
        }
}

